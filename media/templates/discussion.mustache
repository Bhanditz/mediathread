    <td class="panhandle-left-container">
        <div class="panhandle-left discussion"></div>
    </td>
    
    <td class="panhandle-stripe discussion">
        <div class="label">{{panel_state_label}}</div>
    </td>
    
    <td id="{{context.discussion.id}}-panel-container" class="panel-container {{panel_state}} discussion">
        <div class="panel">
            <table class="panel-subcontainer">
                <tr class="discussion-toolbar-row">
                    <td colspan="4" class="panel-subcontainer-toolbar-column">
                        <div class="panel-subcontainer-title discussion">
                            <h1 class="discussion-title">Instructor Feedback</h1>
                        </div>
                    </td>
                </tr>
                <tr class="project-participant-row"><td colspan="5" style="padding-top: 5px"><h3>Write Feedback</h3></td></tr>
                        
                <tr class="discussion-content-row">
                    <td class="panel-content fluid discussion">
                        <div class="threadedcomments">
                            <form id="comment-form" method="POST" action="/comments/post/" 
                                class="threaded_comments_form" data-maxlength="{{COMMENT_MAX_LENGTH}}">
                                
                                <div>
                                    <form method="POST" action="/comments/post/" class="threaded_comments_form" data-maxlength="{{context.discussion.max_length}}">
                                    <table>
                                        {{{context.form}}}
                                    </table>
                                    </form>
                                </div>
                            </form>
                        </div>
                    </td>
                    {{! Media Display Window and or a Collections box }}
                    <td class="panel-container medium {{#context.editing?}}closed collection{{/context.editing?}} {{^context.editing}}closed media{{/context.editing}}">
                        <div class="collection-materials" style="display:{{#context.editing?}}block{{/context.editing?}}{{^context.editing}}none{{/context.editing}}">
                            <h2>
                                <div class="button-form inline">
                                    <a class="columnbutton media browse-button" href="/explore">Source Media</a>
                                </div>
                                Collections
                            </h2>
                            <div id="{{context.dicussion.id}}-collection_table" class="collection_table"></div>
                        </div>
                        <div class="asset-view-published medium" 
                            style="display: {{#context.editing?}}none{{/context.editing?}}{{^context.editing}}block{{/context.editing}}">
                            
                            <div id="{{context.discussion.id}}-videoclipbox" class="videoclipbox" style="display: none;">
                                <div class="annotation-title publishedCitation" style="margin-left: 8px; margin-top: 5px;"></div>
                                <div class="asset-title" style="margin-left: 5px; margin-bottom: 8px; min-height: 20px;"></div>
                                <div class="asset-object" style="border: none; background-color: #ededed;"></div><!-- width changes here too if video size changes -->
                                    <div class="asset-display"></div>
                                    <div class="clipstrip-display"></div>
                                </div>    
                            </div>
                        </div>
                    </td>
                    <td class="panhandle-stripe collection">
                        <div class="label">{{#context.editing?}}Add{{/context.editing?}}{{^context.editing}}View{{/context.editing}} Selection</div>
                    </td>
                    <td class="pantab-container">
                        <div class="pantab collection {{#context.editing?}}open{{/context.editing?}} {{^context.editing}}closed{{/context.editing}}"></div>
                    </td>
                </tr>
            </table>
        </div>
    </td>
        
    <td class="pantab-container">
        <div class="pantab discussion {{panel_state}}"></div>
    </td>
    
    
