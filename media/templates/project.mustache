    <td class="panhandle-left-container">
        <div class="panhandle-left {{context.project.type}}"></div>
    </td>
    
    <td class="panhandle-stripe {{context.project.type}}">
        <div class="label">{{panel_state_label}} {{context.project.type}}</div>
    </td>

    <td id="{{context.project.id}}-panel-container" class="panel-container {{panel_state}} {{context.project.type}}">
        <div class="panel">
            <form name="editproject" method="POST" action="/project/workspace/{{context.project.id}}/">
                <table class="panel-subcontainer">
                    <tr class="project-toolbar-row">
                        <td colspan="4" class="panel-subcontainer-toolbar-column">
                            <div class="panel-subcontainer-title {{context.project.type}}">
                                {{#context.can_edit?}}
                                    <input type="text" name="title" value="{{context.project.title}}" maxlength="80"
                                        class="project-title" style="display: {{#context.editing?}}block{{/context.editing?}}{{^context.editing}}none{{/context.editing}}">
                                {{/context.can_edit?}}
                                <h1 class="project-title" 
                                    style="display: {{#context.editing?}}none{{/context.editing?}}{{^context.editing}}block{{/context.editing}}">
                                    {{context.project.title}}
                                </h1>
                            </div>
                            <div class="panel-subcontainer-toolbar">
                                {{#context.project.visibility?}}
                                    <div class="project-visibility">
                                        <span class="project-visibility-description">{{context.project.visibility}}</span>
                                         <a class="last-version-public" 
                                            style="display: {{#context.project.public_url?}}inline{{{/context.project.public_url?}}{{^context.project.public_url}}none{{/context.project.public_url}}" href="{{context.project.public_url}}">(permalink)
                                         </a>
                                    </div>
                                {{/context.project.visibility?}}
                                
                                <div>
                                    {{#context.can_edit?}}
                                        <input class="{{context.project.type}} project project-savebutton" 
                                            type="submit" value="Save &amp; Publish" />
                                            
                                            <div class="save-publish-status" style="display: none" title="Save Changes">
                                                <div><label>Visibility</label></div>    
                                                <div>
                                                    {{{context.form.publish}}}
                                                </div> 
                                            </div>  
                                    
                                        <input class="{{context.project.type}} project project-previewbutton" 
                                            type="submit" value="{{#context.editing?}}Preview{{/context.editing?}}{{^context.editing}}Edit{{/context.editing}}" />
                                    
                                        {{#context.revisions?}}
                                            <input class="{{context.project.type}} project project-revisionbutton" 
                                                type="button" value="Revisions" />
                                            
                                                <div class="revision-list" style="display: none" title="Revisions">
                                                    <div>Select a revision, then click "Revert". A version of your current work will be saved automatically.</div>    
                                                    <select multiple="multiple">
                                                        {{#context.revisions}}
                                                            <option value="{{versioned_id}}">{{version_number}} &mdash; {{modified}} by {{author}}&nbsp;</option>
                                                        {{/context.revisions}}
                                                    </select> 
                                                </div>  
                                        {{/context.revisions?}}
                                            
                                        {{#context.responses?}}
                                            <input class="project project-responsesbutton" type="button" value="Responses"/>
                                                <div class="response-list" style="display: none" title="Responses">
                                                    <div>Select a student's response, then click "View".</div>
                                                    <select multiple="multiple">
                                                        {{#context.responses}}
                                                            <option value="{{url}}">
                                                                {{#attribution_list}}
                                                                    {{ name }}, 
                                                                {{/attribution_list}}
                                                                &mdash;
                                                                {{ title }} &nbsp;
                                                            </option>
                                                        {{/context.responses}}
                                                    </select> 
                                                </div>  
                                        {{/context.responses?}}
                                    {{/context.can_edit?}}
                                    
                                    {{#context.create_assignment_response?}}
                                        <input class="{{context.project.type}} project project-create-assignment-response" 
                                            type="button" value="Create Assignment Response">
                                    {{/context.create_assignment_response?}}
                                    
                                    {{#context.create_instructor_feedback?}}
                                        <input class="{{context.project.type}} project project-create-instructor-feedback" 
                                            type="button" value="Create Instructor Feedback"/>
                                    {{/context.create_instructor_feedback?}}

                                </div>     
                            </div>
                        </td>
                    </tr>
    
                    <tr class="project-participant-row">                                      
                        <td colspan="5" style="padding-top: 5px">
                            {{#context.can_edit?}}
                                <input class="project participants_toggle" type="submit" value="+/- Author" 
                                    disabled="disabled" style="float: left; display: {{#context.editing?}}block{{/context.editing?}}{{^context.editing}}none{{/context.editing}}" />
                                    
                                <div class="participant_list" style="display: none" title="Update Authors">
                                    <div>{{{context.form.participants}}}</div>
                                </div>
                            {{/context.can_edit?}}
                            <h5 style="margin-top: 0px">by <span class="participants_chosen">
                                {{#context.project.participants}}
                                    {{public_name}}
                                {{/context.project.participants}}
                                </span>
                            </h5>
                            

                        </td>
                    </tr>
                    
                    <tr class="project-content-row">
                        <td class="panel-content fluid {{context.project.type}}">
                            <div>
                                {{#context.can_edit?}}
                                    <script type="text/javascript">
                                        var tinyMCEPreInit = {query:'',suffix:'',base:'/site_media/js/sherdjs/lib/tiny_mce3/jscripts/tiny_mce'};
                                    </script>
                                    <script type="text/javascript" src="/site_media/js/sherdjs/lib/tiny_mce3_min.js"></script>
                                    <script type="text/javascript" src="/site_media/js/tiny_mce_init3.js"></script>
                                    <textarea id="{{context.project.id}}-project-content" tabindex="0" name="body" 
                                        class="mceEditor project-content" mce_editable="true" 
                                        style="display: none">
                                        {{{context.project.body}}}
                                    </textarea>
                                {{/context.can_edit?}}
                                <div id="{{context.project.id}}-essay-space" class="essay-space" 
                                    style="display:{{#context.editing?}}none{{/context.editing?}}{{^context.editing}}block{{/context.editing}}">  
                                    {{{context.project.body}}}
                                </div>
                            </div>
                        </td>
                        {{! Media Display Window and or a Collections box }}
                        <td class="panel-container medium {{#context.editing?}}open collection{{/context.editing?}} {{^context.editing}}closed media{{/context.editing}}">
                            {{#context.can_edit}}
                            <div class="collection-materials" style="display:{{#context.editing?}}block{{/context.editing?}}{{^context.editing}}none{{/context.editing}}">
                                <h2>
                                    <div class="button-form inline">
                                        <a class="columnbutton media browse-button" href="/explore">Source Media</a>
                                    </div>
                                    Collections
                                </h2>
                                <div id="{{context.project.id}}-collection_table" class="collection_table"></div>
                            </div>
                            {{/context.can_edit}}
                            <div class="asset-view-published medium" 
                                style="display: {{#context.editing?}}none{{/context.editing?}}{{^context.editing}}block{{/context.editing}}">
                                
                                <div id="{{context.project.id}}-videoclipbox" class="videoclipbox" style="display: none;">
                                    {{#context.project.create_selection?}}<div class="create-selection" style="float: right"></div>{{/context.project.create_selection?}}
                                    <div class="annotation-title publishedCitation" style="margin-left: 8px; margin-top: 5px;"></div>
                                    <div class="asset-title" style="margin-left: 5px; margin-bottom: 8px; min-height: 20px;"></div>
                                    <div class="asset-object" style="border: none; background-color: #ededed;"></div><!-- width changes here too if video size changes -->
                                        <div class="asset-display"></div>
                                        <div class="clipstrip-display"></div>
                                    </div>    
                                </div>
                            </div>
                        </td>
                        <td class="panhandle-stripe collection">
                            <div class="label">{{#context.editing?}}Add{{/context.editing?}}{{^context.editing}}View{{/context.editing}} Selection</div>
                        </td>
                        <td class="pantab-container">
                            <div class="pantab collection {{#context.editing?}}open{{/context.editing?}} {{^context.editing}}closed{{/context.editing}}"></div>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </td>
    
    <td class="pantab-container">
        <div class="pantab {{context.project.type}} {{panel_state}}"></div>
    </td>
    
